            "foreignKey": "schoolId",
            "options": {
                "nestRemoting": true
            }
        },
        "strategies": {
            "type": "hasMany",
            "model": "Strategy",
            "foreignKey": "schoolId",
            "options": {
                "nestRemoting": true
            }
        }
    },
    "acls": [],
    "methods": {
        "prototype.UpdateData": {
            "accepts": [{
                "arg": "school",
                "type": "object",
                "required": true,
                "description": ""
